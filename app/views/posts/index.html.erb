<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
      <%= link_to "Add New Comment", new_post_comment_path(post) %>
      <%= link_to "Show All Comments", post_comments_path(post) %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
